{
    "openapi": "3.0.0",
    "info": {
        "title": "Платёжное API для коллективной системы печати",
        "version": "0.1"
    },
    "paths": {
        "/check": {
            "get": {
                "summary": "Проверить подключение к YooKassa",
                "operationId": "checkConnection",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/payment/": {
            "post": {
                "summary": "Создать платёж",
                "operationId": "createPayment",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}